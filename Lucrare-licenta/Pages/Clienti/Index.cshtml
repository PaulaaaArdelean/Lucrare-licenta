                @Html.DisplayFor(modelItem => item.NumeClientFirma)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CNPCUI)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Judet.Judetul)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Localitate.Localitatea)
