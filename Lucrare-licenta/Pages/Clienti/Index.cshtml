            <th>
                @Html.DisplayNameFor(model => model.Client[0].Strada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].Numar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].CodPostal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].Telefon)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Client) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TipAsigurat.TipulAsigurat)
                </td>
