@{
    ViewData["Title"] = "Index";
}

<h1>Clienti</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].TipAsigurat.TipulAsigurat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].NumeClientFirma)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].CNPCUI)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].Judet.Judetul)
